%h2 Listing Categories 
%p.buttons= link_to 'Add Category', new_category_path

.table
	%table.data
		%thead
			%tr
				%th= t('Category.name')
				
		%tbody
			-@categories.each do |category|
				%tr
					%td= category.name
					%td= category.description
					%td= link_to 'Edit', edit_category_path(category) 
					%td= link_to 'Delete', category_path(category), :method => 'delete', data: {confirm: 'Are you sure?' } 
